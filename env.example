# Database Configuration
# Use 'postgres' for PostgreSQL or leave empty/remove for SQLite
DB_TYPE=postgres

# PostgreSQL Configuration (only used if DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=kennzeichen_sammler

# SQLite Configuration (only used if DB_TYPE is not 'postgres')
DB_PATH=database.sqlite

# Database Synchronization (set to 'true' to auto-create tables, 'false' for production with migrations)
DB_SYNCHRONIZE=true

# Database Logging (set to 'true' to enable SQL query logging)
DB_LOGGING=false

# JWT Secret Key (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Backend Port
PORT=3001

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development


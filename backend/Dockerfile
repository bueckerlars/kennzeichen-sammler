FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install --omit=dev

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/src/data ./src/data

# Ensure data directory exists
RUN mkdir -p /app/src/data

EXPOSE 3001

CMD ["node", "dist/index.js"]

